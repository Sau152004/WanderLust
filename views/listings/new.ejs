<%- include("../includes/boilerplate.ejs") %>
<h2 style="text-align: center;">Create a new List</h2>

<form action="/listings" method="post" class="new-form" enctype="multipart/form-data">
  <div class="new-form-box">
    <label for="title">Title: </label>
    <input type="text" name="title" placeholder="Enter title" required />
  </div>

  <div class="new-form-box">
    <label for="description">Description: </label>
    <textarea
      name="description"
      placeholder="Enter full description of the place"
      rows="5"
      cols="50"
    ></textarea>
  </div>

<!--   
  <div class="new-form-box">
    <label for="image">Image URL/Link: </label>
    <input type="text" name="image" placeholder="https://abc.png" />
  </div> -->

  <div class="new-form-box">
    <label for="image" >Upload Listing Image: </label>
    <input type="file" name="image" />
  </div>

  <div class="new-form-price-country">
    <div class="new-form-box">
      <label for="price">Price: </label>
      <input type="text" name="price" placeholder="1200" required/>
    </div>
    <div class="new-form-box country">
      <label for="country">Country: </label>
      <input type="text" name="country" placeholder="India" required/>
    </div>
  </div>

  <div class="new-form-box">
    <label for="location">Location: </label>
    <input type="text" name="location" placeholder="Jaipur, Rajasthan" required/>
  </div>
  <button class="add-btn">Add</button>
</form>
